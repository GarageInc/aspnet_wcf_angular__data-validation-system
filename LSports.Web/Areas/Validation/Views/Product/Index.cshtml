
@section Scripts
{
    <script src="~/Scripts/Products/app.js"></script>
    <script src="~/Scripts/Products/timesframeLoader.js"></script>
    <script src="~/Scripts/Products/productsController.js"></script>
    <script src="~/Scripts/Products/productsDirective.js"></script>
}

@section Body
{
    <div ng-app="productsApp">

        <div ng-controller="productsController as ctrl" style="height:885px; overflow-y:auto; overflow-x: hidden; padding-right: 10px;">

            <div class="block-ui" ng-if="isLoading">
                <div class="loading-message"><img src="http://cdn.lsports.eu//Content/Metronic/theme/assets/global/img/loading-spinner-grey.gif"><span>&nbsp;&nbsp;LOADING...</span></div>
            </div>

            <div class="row col-md-12" style="margin-left: 5px;">
                <div style="padding:10px;float:left;">
                    <h3>From:</h3>
                </div>
                <div style="padding:10px;float:left;">
                    <h3>
                        <a href="#" id="dateFrom" data-type="combodate" data-original-title="Select Date From" class="editable editable-click"></a>
                    </h3>
                </div>
                <div style="padding:10px;float:left;">
                    <h3>To:</h3>
                </div>
                <div style="padding:10px; float:left;">
                    <h3>
                        <a href="#" id="dateTo" data-type="combodate" data-template="D / MMM / YYYY" data-pk="1" data-original-title="Select Date To" class="editable editable-click"></a>
                    </h3>
                </div>
                <div style="padding:10px; position: relative; margin-left: 30px; float:left;top: 20px;">
                    <timeframeloader-directive>
                    </timeframeloader-directive>
                </div>
            </div>
            
            <div ng-init="refresh()">

                <div ng-repeat="productViewModel in productsViewModels">
                    <products-directive product="productViewModel">
                        <div class="col-md-5 col-sm-6" style="border:1px solid;    margin: 30px;">
                            <!-- BEGIN PORTLET-->
                            <div class="portlet" style="margin-bottom: 0px;">
                                <div class="portlet-title">
                                    <div class="caption">
                                        <i class="icon-share font-red-sunglo hide"></i>
                                        <span class="caption-subject font-red-sunglo bold uppercase">{{productViewModel.Product.Name}}</span>
                                    </div>
                                    <div class="actions">
                                        <div class="btn-group">
                                            <a href="" class="btn grey-salsa btn-circle btn-sm">
                                                {{productViewModel.NumberOfIssues}}<span class="fa">
                                                </span>
                                            </a>
                                        </div>
                                    </div>
                                </div>

                                <div class="portlet-body">

                                    <div id="{{'chart_product_'+productViewModel.Product.Id}}" class="chart">

                                    </div>

                                    <div  style="cursor:pointer;">
                                        <div class="row" style="background-color:darkturquoise;">
                                            <div class="row col-md-12" style="font-family: Open Sans, sans-serif;margin: 0 auto;">
                                                <div style="display:inline-block;font-size: 23px;  margin-left: 10px;">
                                                    View More 
                                                </div>
                                                <div style="display:inline-block;font-size: 19px;float: right; margin-top: 5px;">
                                                    <div style="display:inline-block;">
                                                        <a href="{{'/ValidationResults/ForProduct/' + productViewModel.Product.Id}}" style="margin-left: 10px; color: darkblue; margin-right: 10px;">
                                                            Validation results
                                                            <span style="margin-top: 5px;float: right;" class="glyphicon glyphicon-circle-arrow-right">
                                                            </span>
                                                        </a>
                                                    </div>
                                                    <div style="display:inline-block;font-size: 19px;">
                                                        <a href="{{'/ArrivalMessages/ForProduct/' + productViewModel.Product.Id}}" style="margin-left: 10px; color: darkblue; margin-right: 10px;">
                                                            Arrival messages
                                                            <span style="margin-top: 5px;float: right;" class="glyphicon glyphicon-circle-arrow-right">
                                                            </span>
                                                        </a>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </products-directive>
                </div>
            </div>
        </div>

        <div class="block-ui" ng-if="isLoading">
            <div class="loading-message"><img src="http://cdn.lsports.eu//Content/Metronic/theme/assets/global/img/loading-spinner-grey.gif" align=""><span>&nbsp;&nbsp;LOADING...</span></div>
        </div>
    </div>
}




