@section Scripts
{
    <script src="~/Scripts/SchedulersHistory/app.js"></script>
    <script src="~/Scripts/SchedulersHistory/schedulersHistoryDirective.js"></script>
    <script src="~/Scripts/SchedulersHistory/schedulersHistoryController.js"></script>
}

@section Body
{
<div ng-app="schedulersHistoryApp">

    <div ng-controller="schedulersHistoryController as ctrl" style="height:885px; overflow-y:auto; overflow-x: hidden; padding-right: 10px;padding-bottom: 40px;">

        <div class="block-ui" ng-if="isLoading">
            <div class="loading-message"><img src="http://cdn.lsports.eu//Content/Metronic/theme/assets/global/img/loading-spinner-grey.gif" align=""><span>&nbsp;&nbsp;LOADING...</span></div>
        </div>

        <div class="row col-md-12" style="margin-left: 5px;">
            <div style="padding:10px;float:left;">
                <h3>From:</h3>
            </div>
            <div style="padding:10px;float:left;">
                <h3>
                    <a href="#" id="dateFrom" data-type="datetime" data-original-title="Select Date From" class="editable editable-click"></a>
                </h3>
            </div>
            <div style="padding:10px;float:left;">
                <h3>To:</h3>
            </div>
            <div style="padding:10px; float:left;">
                <h3>
                    <a href="#" id="dateTo" data-type="datetime" data-template="D / MMM / YYYY" data-pk="1" data-original-title="Select Date To" class="editable editable-click"></a>
                </h3>
            </div>
            <div style="padding:10px; position: relative; margin-left: 30px; float:left;" ng-disabled="!isLoading">
                <h3>
                    <button ng-disabled="isLoading" class="btn blue" ng-click="ctrl.loadBySelectedDates()">Load</button>
                    <label for="checkIntervalOfReload">Update by {{updatingInterval/1000}} seconds interval:</label>
                    <input id="checkIntervalOfReload" type="checkbox" ng-model="updateByInterval" ng-change="checkboxIntervalChanged()" value="Update by 15 seconds interval" />
                </h3>
            </div>
        </div>
         <!--<div class="row col-md-12" style="margin-left: 5px;">
            <div style="padding:10px;">
               label style="display:inline-block;">Or select:</!--label>
                <select style="display:inline-block; margin-left:20px;" ng-disabled="isLoading" ng-options="scale as scale.name for scale in scales"
                        class="form-control input-small select2me"
                        ng-model="selectedScale" ng-change="ctrl.loadBySelectBox()">
                    <option value="" disabled selected>Timeframe...</option>
                </select>
            </div>
        </div>-->

        <div ng-init="refresh()">
            <div>
                <schedulershistory-directive ng-repeat="product in products" product="product" style="border: 1px solid; margin-top: 30px; margin-bottom: 30px;">
                    
                </schedulershistory-directive>
            </div>
        </div>
    </div>

</div>
}




